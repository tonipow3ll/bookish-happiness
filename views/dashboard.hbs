<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your posts</p>

{{#if userPosts}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each userPosts}}
            <tr>
                <td><a href="/posts/{{_id}}">{{title}}</a></td>
                <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
 <p>You have not created any posts yet!</p>
{{/if}}